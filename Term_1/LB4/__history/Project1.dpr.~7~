program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

//Const values
Const
  N = 10;
  //N - number of array elements

//Var values
var
  i, j: Integer;
  S: array [1..N,1..N] of Integer;
  {i, j - cycle counters
   S - two-dimensional array of dimension NxN }

begin

  {filling the first row and the first column
   with random elements }
  // tart of the cycle
  for i := 1 to N do
  begin
    for j := 1 to N do
    begin
      if (j = 1) or (i = 1) then
      begin
        S[i,j] := Random(9999);
      end;
    end;
    j := 0;
  end;

  {filling in array elements parallel to the main
   diagonal }
  for i := 2 to N do
  Begin
    S[i,j] := S[i - 1,j - 1];
     for j := 2 to N do
     Begin
         S[i,j] := S[i - 1,j - 1];
     End;
  End;

  {output of the final array to the console}
  i := 1;
  j := 1;
  WriteLn('Полученый массив: ');
  while (i <= N) do
  begin
    while (j <= N) do
    Begin
      Write(S[i,j]:6, ' ');
      j := j + 1;
    End;
    j := 1;
    i := i + 1;
    WriteLn(' ' + #10);
  end;

  ReadLn;
end.
