program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
  i, j: Integer;
  k, m: Integer;
  S: array [0..9,0..9] of Integer;

begin
  i := 0;
  j := 0;
  k := 0;
  m := 0;
  for i := 0 to 9 do
  begin
    for j := 0 to 9 do
    begin
      if (j = 0) or (i = 0) then
      begin
        WriteLn('Введите (', i, ',', j, ') Элемент массива');
        ReadLn(S[i,j]);
        //Break;
        //S[i,j] := 5;
      end;
    end;
    j := 0;
  end;

  i := 0;

  while (i <= 9) do
  begin
    while (k <= 9) and (m <= 9) do
    begin
        S[k,m] := S[0,i];
        inc(k);
        inc(m);
    end;
    inc(i);
  end;

  WriteLn('Полученый массив: ');
  while (i <= 9) do
  begin
    while (j <= 9) do
    Begin
      Write(S[i,j], ' ');
      j := j + 1;
    End;
    j := 0;
    i := i + 1;
    WriteLn;
  end;

  ReadLn;
end.
