program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

Const
  N = 10;

var
  i, j: Integer;
  k, m: Integer;
  S: array [1..N,1..N] of Integer;

begin
  i := 0;
  j := 0;
  for i := 1 to N do
  begin
    for j := 1 to N do
    begin
      if (j = 1) or (i = 1) then
      begin
        S[i,j] := Random(9999);
      end;
    end;
    j := 0;
  end;

  i := 0;
  j := 0;
  for i := 2 to N do
  Begin
    S[i,j] := S[i - 1,j - 1];
     for j := 2 to N do
     Begin
         S[i,j] := S[i - 1,j - 1];
     End;
  End;

  i := 1;
  j := 1;
  WriteLn('Полученый массив: ');
  while (i <= N) do
  begin
    while (j <= N) do
    Begin
      Write(S[i,j]:6, ' ');
      j := j + 1;
    End;
    j := 1;
    i := i + 1;
    WriteLn(' ' + #10);
  end;

  ReadLn;
end.
